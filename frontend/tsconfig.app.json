{
  "compilerOptions": {
    "rootDir": "./src",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "target": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"]
}
